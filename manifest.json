{
  "manifest_version": 3,
  "name": "Discord Repost Buttons",
  "description": "Adds buttons to select websites that allow sharing media in configured Discord server channels",
  "homepage_url": "https://github.com/LuxGrey/Discord-Repost-Buttons",
  "version": "0.0.1",
  "icons": {
    "32": "icons/icon_32.png",
    "64": "icons/icon_64.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@discord-repost-buttons.lux-grey"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*"
      ],
      "js": [
        "reddit.js"
      ]
    }
  ],
  "action": {
    "default_icon": "icons/icon_64.png",
    "default_title": "Discord Repost Buttons",
    "default_popup": "popup/settings.html"
  }
}